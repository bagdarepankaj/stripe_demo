<% if @cart["products"].present? %>
	<h1>Cart</h1>
	<br>
	<% @cart["products"].each do |product| %>
		<div class="card mb-3">
			<div class="card-body d-flex">
				<img src="http://placehold.it/120x120&text=image<%= product['id'] %>">
				<%#= image_tag product.images.first.variant(resize_to_limit: [120, 120]) if product.images.attached? %>
				<!-- <img src="https://picsum.photos/id/237/200/300"> -->
				<!-- <img src="https://www.kasandbox.org/programming-images/avatars/leafers-seedling.png"> -->
				<div class="card-details flex-fill">
					<h5 class="card-title"><%= product["name"] %></h5>
					<div class="card-text"><%= product["description"] %></div>
					<div class="card-text"> Price: <%= product["price"] %></div>
					<div class="card-text"> Quantity: <%= product["quantity"] %></div>
				</div>
				<%= link_to remove_cart_path(product_id: product["id"]) do %>
					<i class="btn bi bi-trash3-fill btn-warning"></i>
				<% end %>
			</div>
		</div>
	<% end %>
	<%= link_to 'Checkout' , new_payments_path(@cart), class: 'btn btn-info form-control' %>
<% else %>
	<h1>Cart is Empty</h1>
<% end %>