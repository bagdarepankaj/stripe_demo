<div class="d-flex justify-content-between">
	<h1>Products</h1>
	<%= link_to :New, new_product_path, class: 'btn btn-info align-self-start' %>
</div>
<br>

<table class="table">
	<thead>
		<th>Name</th>
		<th>Description</th>
		<th>Price</th>
		<th>Acrions</th>
	</thead>
	<tbody>
		<% @products.each do |product| %>
			<tr>
				<td>
					<%= product.name %>
				</td>
				<td>
					<%= product.description %>
				</td>
				<td>
					<%= product.price %>
				</td>
				<td>
					<%= link_to :view, product %> | <%= link_to :edit, edit_product_path(product) %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
