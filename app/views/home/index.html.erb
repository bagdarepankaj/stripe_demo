<h1>Home</h1>
<br>

<div class="row row-cols-3">
  <% @products.each do |product| %>
    <div class="col mb-4">
      <div class="card h-100">
        <% if product.images.attached? %>
          <span style="height: 100%;"><%= image_tag product.images.first.variant(resize_to_limit: [500, 500]), class: "card-img-top img-responsive" %></span>
        <% else %>
          <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/041.webp" class="card-img-top" alt="Hollywood Sign on The Hill">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= product.description %></p>
        </div>

        <div class="card-footer">
          <%= link_to 'View', product, class: 'btn btn-primary' %>
          <%= link_to add_cart_path(product_id: product.id), class: 'btn btn-success' do  %>
            <i class="bi bi-cart"></i> Add
          <% end %>
        </div>

      </div>
    </div>
  <% end %>

